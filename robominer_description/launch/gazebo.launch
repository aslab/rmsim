<launch>
  <!-- these are the arguments you can pass this launch file, for example paused:=true --> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="recording" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="model" default="$(find robominer_description)/urdf/robominer.xacro"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched --> 
	<group>
	  <include file="$(find gazebo_ros)/launch/empty_world.launch">
		<let name="world_name" value="$(find robominer_description)/worlds/robominer.world" />
		<let name="debug" value="$(arg debug)" />
		<let name="gui" value="$(arg gui)" />
		<let name="paused" value="$(arg paused)"/>
		<let name="use_sim_time" value="$(arg use_sim_time)"/>
		<let name="recording" value="false"/>
	  </include>
	</group>	
<!--
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
	
   push robot_description to factory and spawn robot in gazebo 
  <node name="urdf_spawner" pkg="gazebo_ros" exec="spawn_model" 
        args="-z 1.0 -unpause -urdf -model robot -param robot_description" output="screen" />

  <node pkg="robot_state_publisher" exec="robot_state_publisher"  name="robot_state_publisher_gazebo">
	  pongo gazebo al final del name de este nodo para evitar conflicto con controller.launch
    <param name="publish_frequency" exec="double" value="30.0" />
  </node>
-->	
   <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find robominer_description)/urdf/robominer.xacro'" />

  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" exec="spawn_model" output="screen"
    args="-urdf -model robominer -param robot_description"/>

  <!-- ros_control robominer launch file -->
  <!--include file="$(find robominer_control)/launch/robominer_control.launch" /-->
	
</launch>